<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context="com.tr.muhurath.app.muhurat.MuhuratSummaryActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <TextView
        android:id="@+id/txtMuhuratDateHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Welcome"
        android:textSize="@dimen/lbl_size"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/txtMuhuratGuli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Guli Kala"
        android:textSize="@dimen/lbl_size"
        />
    <TextView
        android:id="@+id/txtMuhuratRahu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Rahu Kala"
        android:textSize="@dimen/lbl_size"
        />
    <TextView
        android:id="@+id/txtMuhuratYama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Yama Kala"
        android:textSize="@dimen/lbl_size"
        />

    <TextView
        android:id="@+id/txtMuhuraShoolam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Shoolam"
        android:textSize="@dimen/lbl_size"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/txtMuhuraSunRise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="SunRise"
        android:textSize="@dimen/lbl_size"
        />
    <TextView
        android:id="@+id/txtMuhuraSunSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="SunSet"
        android:textSize="@dimen/lbl_size"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share via.."
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/shareButton"
        android:background="@color/colorShareButton"/>

</LinearLayout>
