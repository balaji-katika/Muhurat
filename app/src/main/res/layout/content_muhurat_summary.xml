<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tr.muhurath.app.muhurat.MuhuratSummaryActivity"
    tools:showIn="@layout/activity_muhurat_summary">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <TextView
            android:id="@+id/txtMuhuratDateHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Welcome"
            android:textSize="@dimen/lbl_size"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_margin="15dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/txtMuhuratGuli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Guli Kala"
            android:textSize="@dimen/lbl_size"
            />
        <TextView
            android:id="@+id/txtMuhuratRahu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Rahu Kala"
            android:textSize="@dimen/lbl_size"
            />
        <TextView
            android:id="@+id/txtMuhuratYama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Yama Kala"
            android:textSize="@dimen/lbl_size"
            />

        <TextView
            android:id="@+id/txtMuhuraShoolam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Shoolam"
            android:textSize="@dimen/lbl_size"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_margin="15dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/txtMuhuraSunRise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="SunRise"
            android:textSize="@dimen/lbl_size"
            />
        <TextView
            android:id="@+id/txtMuhuraSunSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="SunSet"
            android:textSize="@dimen/lbl_size"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_margin="15dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share via.."
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:id="@+id/shareButton"
            android:background="@color/colorShareButton"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>